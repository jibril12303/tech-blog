<div class="container pt-5">
  <div class="border border-2 border-danger">
    <p class="bg-danger p-2 text-white">Create user accout</p>
    <form method="post" action="/user/signup" class="p-2">
      {{#if error}}
        <div class="alert alert-danger" role="alert">
          {{error}}
        </div>
      {{/if}}
      <div class="mb-3">
        <label for="username" class="form-label">User</label>
        <input
          type="text"
          class="form-control"
          name="username"
          id="username"
          aria-describedby="emailHelp"
        />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          name="password"
          class="form-control"
          id="password"
        />
      </div>
      <button type="submit" class="btn btn-secondary w-100">Submit</button>
      <a href="/user/signin" class="link-primary">login instead</a>
    </form>
  </div>
</div>