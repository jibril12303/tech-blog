<div class="container pt-5">
  <div class="border border-2 border-danger">
    <p class="bg-danger p-2 text-white">Edit Post</p>
    <form method="post" action="/posts/{{post.id}}?_method=PUT" class="p-2">
    <input type="hidden" name="_method" value="PUT">
      <div class="mb-3">
        <label for="username" class="form-label">Title</label>
        <input
          type="text"
          class="form-control"
          name="title"
          id="title"
          aria-describedby="emailHelp"
          value="{{post.title}}"
        />
      </div>
      <div class="mb-3">
        <label for="content" class="form-label">Content</label>
        <input type="text" name="content" class="form-control" id="content" value="{{post.content}}" />
      </div>
      <button type="submit" class="btn btn-secondary w-100">update</button>
    </form>
    <form method="post" action="/posts/{{post.id}}?_method=DELETE" class="p-1">
    <input type="hidden" name="_method" value="DELETE">
    <button type="submit" class="btn btn-secondary w-100">Delete</button>
    </form>
  </div>

</div>